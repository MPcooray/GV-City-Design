{
  "configurations": [
    {
      "name": "Mac",
      "includePath": [
        "${workspaceFolder}/src",
        "/opt/homebrew/include",
        "/opt/homebrew/include/glm",
        "/opt/homebrew/include/**"
      ],
      "defines": [],
      "compilerPath": "/usr/bin/clang++",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "macos-clang-arm64",
      "browse": {
        "path": [
          "${workspaceFolder}/src",
          "/opt/homebrew/include",
          "/opt/homebrew/include/glm"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    },
    {
      "name": "Windows",
      "includePath": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/src/glad",
        "C:/path/to/vcpkg/installed/x64-windows/include"
      ],
      "defines": [],
      "compilerPath": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/VC/Tools/MSVC/<version>/bin/Hostx64/x64/cl.exe",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "windows-msvc-x64"
    }
  ],
  "version": 4
}
